{
  "theme": "Nordic",
  "icon_theme": "Material Icon Theme",
  "base_keymap": "VSCode",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 15,
  "ui_font_size": 16,
  "vim_mode": true,
  "buffer_font_features": { "calt": false },
  "cursor_blink": false,
  "extend_comment_on_newline": false,
  "pane_split_direction_horizontal": "down",
  "pane_split_direction_vertical": "right",
  "tab_size": 2,
  "preferred_line_length": 120,
  "relative_line_numbers": true,
  "restore_on_startup": "last_session",
  "vertical_scroll_margin": 15,
  "always_treat_brackets_as_autoclosed": true,
  "features": { "edit_prediction_provider": "zed" },
  "edit_predictions": { "mode": "subtle" },
  "use_system_prompts": false,
  "inline_code_actions": false,
  "close_on_file_delete": true,
  "snippet_sort_order": "top",
  "use_smartcase_search": true,
  "indent_guides": { "enabled": false },
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "tab_size": 4,
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "Zig": {
      "tab_size": 4
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "inlayHints": {
            "callArgumentNames": false
          }
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 120
        }
      }
    }
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_diagnostics": "all"
  },
  "auto_install_extensions": {
    "emmet": true,
    "git-firefly": true,
    "ini": true,
    "material-icon-theme": true,
    "nordic-nvim-theme": true,
    "ruff": true,
    "toml": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "git_panel": {
    "button": false
  },
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "button": false
  },
  "terminal": {
    "button": false,
    "cursor_shape": "bar"
  },
  "experimental.theme_overrides": {
    "editor.document_highlight.write_background": "#00000000",
    "editor.document_highlight.read_background": "#00000000"
  },
  "scrollbar": { "show": "never" },
  "tab_bar": { "show_nav_history_buttons": false },
  "preview_tabs": { "enabled": false },
  "project_panel": { "button": false, "dock": "left" },
  "outline_panel": { "button": false },
  "collaboration_panel": { "button": false },
  "global_lsp_settings": { "button": false },
  "chat_panel": { "button": "when_in_call" },
  "search": { "button": false },
  "debugger": { "button": false },
  "gutter": {
    "folds": false,
    "min_line_number_digits": 2,
    "runnables": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  }
}
